.tool-simple-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 12rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.tool-simple-card:active {
  opacity: 0.8;
}

.tool-icon {
  width: 72rpx;
  height: 72rpx;
  margin-bottom: 12rpx;
}

.tool-name {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  text-align: center;
}
