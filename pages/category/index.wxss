page {
  height: 100vh;
  background: #f8f9fa;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f9fa;
  margin: 0;
  padding: 0;
}

.search-bar {
  width: 100%;
  display: flex;
  align-items: center;
  height: 72rpx;
  padding: 0 24rpx;
  background: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  margin: 0;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #333;
}

.content {
  flex: 1;
  display: flex;
  overflow: hidden;
  margin: 0;
  padding: 0;
  position: absolute;
  left:0;
  top:70rpx;
  height:100%
}

.category-list {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 160rpx;
  background: #fff;
  box-shadow: 2rpx 0 8rpx rgba(0, 0, 0, 0.05);
  overflow-y: auto;
  z-index: 1;
}

.category-item {
  width: 160rpx;
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  box-sizing: border-box;
  margin: 0;
}

.category-item.active {
  background: #f8f9fa;
}

.category-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 36rpx;
  background: #07c160;
  border-radius: 0 6rpx 6rpx 0;
}

.category-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  opacity: 0.7;
}

.category-item.active .category-icon {
  opacity: 1;
}

.category-item text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.category-item.active text {
  color: #07c160;
  font-weight: 500;
}

.tool-list {
  margin-left: 160rpx;
  flex: 1;
  height: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  background: #f8f9fa;
  overflow-y: auto;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 120rpx;
}

.empty-tip image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
  opacity: 0.7;
}

.empty-tip text {
  font-size: 28rpx;
  color: #999;
}