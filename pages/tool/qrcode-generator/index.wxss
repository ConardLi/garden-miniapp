.container {
  background: #f7f8fa;
  padding: 16rpx;
  box-sizing: border-box;
}

/* 输入区域 */
.input-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  margin-bottom: 16rpx;
}

.input-area {
  width: 100%;
  height: 180rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  background: #f9f9fa;
  transition: all 0.3s;
}

.input-area:focus {
  background: #fff;
  border-color: #07c160;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 12rpx;
  margin-top: 20rpx;
}

.button-group button {
  flex: 1;
  margin: 0 !important;
  display: flex !important;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
}

.scan-btn {
  background: #f7f8fa !important;
  color: #333 !important;
  font-weight: normal !important;
  position: relative;
  padding: 0 !important;
}

.generate-btn {
  background: linear-gradient(to right, #07c160, #0baf56) !important;
  color: #fff !important;
  font-weight: 500 !important;
  padding: 0 !important;
}

/* 二维码展示区域 */
.qrcode-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
  padding: 16rpx;
  box-sizing: border-box;
}

.save-btn {
  width: 100% !important;
  height: 80rpx;
  border-radius: 40rpx !important;
  font-size: 28rpx !important;
  background: linear-gradient(to right, #07c160, #0baf56) !important;
  color: #fff !important;
  font-weight: 500 !important;
  display: flex !important;
  align-items: center;
  justify-content: center;
  padding: 0 !important;
  margin: 0 !important;
}

/* 按钮点击效果 */
.scan-btn:active,
.generate-btn:active,
.save-btn:active {
  opacity: 0.8;
  transform: translateY(2rpx);
}

/* 优化按钮禁用状态 */
button[disabled] {
  opacity: 0.6 !important;
  background: #f7f8fa !important;
  color: #999 !important;
}
