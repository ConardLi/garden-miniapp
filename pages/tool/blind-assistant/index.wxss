.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx 0;
  box-sizing: border-box;
}

/* 主功能区域 */
.main-section {
  opacity: 1;
  transition: opacity 0.3s ease;
}

.main-section.hide {
  opacity: 0;
  pointer-events: none;
}

.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
  padding: 32rpx;
}

.grid-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  aspect-ratio: 1;
  transition: transform 0.2s ease;
}

.grid-item:active {
  transform: scale(0.98);
}

.icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.icon-wrapper.environment {
  background: #e3f2fd;
}

.icon-wrapper.navigation {
  background: #e8f5e9;
}

.icon-wrapper.object {
  background: #fff3e0;
}

.icon-wrapper.text {
  background: #f3e5f5;
}

.grid-icon {
  width: 64rpx;
  height: 64rpx;
}

.grid-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.settings-btn {
  position: fixed;
  bottom: 48rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
}

.settings-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.settings-btn text {
  font-size: 24rpx;
  color: #666;
}

/* 设置界面 */
.settings-section {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  z-index: 100;
  opacity: 1;
  transition: opacity 0.3s ease;
  display: flex;
  flex-direction: column;
}

.settings-section.hide {
  opacity: 0;
  pointer-events: none;
}

.settings-header {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.back-btn {
  display: flex;
  align-items: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.back-btn text {
  font-size: 28rpx;
  color: #666;
}

.settings-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-right: 48rpx;
}

.settings-content {
  flex: 1;
  overflow: hidden;
}

.settings-group {
  margin: 32rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.settings-group-title {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.group-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.settings-group-title text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.settings-item {
  padding: 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.item-label {
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.label-desc {
  font-size: 24rpx;
  color: #999;
}

.custom-slider {
  margin: 24rpx 12rpx;
}

.contact-list {
  padding: 0 24rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.contact-info {
  flex: 1;
  min-width: 0;
}

.contact-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
  display: block;
}

.contact-phone {
  font-size: 24rpx;
  color: #666;
}

.delete-btn {
  padding: 16rpx;
  margin: -16rpx;
}

.delete-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
}

.add-contact-btn {
  margin: 24rpx;
  background: #f5f5f5;
  border: none;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
}

.add-contact-btn::after {
  display: none;
}

.add-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
  opacity: 0.5;
}

.add-contact-btn text {
  font-size: 28rpx;
  color: #666;
}
