.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 32rpx;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx 0;
}

.tip-text {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  margin-bottom: 48rpx;
}

.preview {
  width: 100%;
  height: 400rpx;
  margin-bottom: 48rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.preview image {
  width: 100%;
  height: 100%;
}

.start-btn {
  width: 240rpx;
  height: 240rpx;
  border-radius: 120rpx;
  background: #1976d2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(25, 118, 210, 0.2);
}

.start-btn text {
  color: #fff;
  font-size: 28rpx;
  margin-top: 16rpx;
}

.text-display {
  position: fixed;
  bottom: 200rpx;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 24rpx;
  z-index: 1001;
  word-break: break-all;
  max-height: 200rpx;
  overflow-y: auto;
}
