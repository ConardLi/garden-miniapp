/* pages/tool/image-compress/index.wxss */
.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  text-align: center;
  padding: 20rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

.content {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  margin-top: 20rpx;
}

.image-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.image-box {
  background: #f8f8f8;
  border-radius: 10rpx;
  padding: 20rpx;
  text-align: center;
}

.image-box image {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
}

.size-text {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

.options-container {
  margin: 20rpx 0;
}

.option-item {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
}

.option-item text {
  font-size: 28rpx;
  color: #333;
  display: block;
}

.quality-hint, .scale-hint {
  font-size: 24rpx !important;
  color: #666 !important;
  margin: 10rpx 0;
}

.button-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin: 20rpx 0;
}

.btn {
  margin: 0;
  background: #f8f8f8;
  color: #333;
  border: none;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 10rpx;
}

.btn.primary {
  background: #07c160;
  color: #fff;
}

.btn:active {
  opacity: 0.8;
}

.empty-state {
  text-align: center;
  padding: 40rpx;
  color: #666;
  font-size: 28rpx;
  margin-top: 20rpx;
}
