/* 容器 */
.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 0;
  box-sizing: border-box;
}


/* 头部区域 */
.header {
  position: relative;
  height: 360rpx;
  width: 100%;
  overflow: hidden;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.header-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.6));
  z-index: 2;
}

.header-content {
  position: absolute;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  z-index: 3;
}

.header-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 16rpx;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.header-desc {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  display: block;
}


/* 功能特点样式 */
.features {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 20rpx;
  background: #fff;
  margin: -60rpx 30rpx 0;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.feature-item {
  text-align: center;
  flex: 1;
}

.feature-icon-wrap {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto 20rpx;
  background: #f0f7ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.feature-icon {
  width: 60rpx;
  height: 60rpx;
}

.feature-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 操作区域样式 */
.action-area {
  padding: 40rpx 30rpx;
}

.capture-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.camera-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.tips-card {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
}

.tips-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.tips-list {
  color: #666;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.tip-dot {
  margin-right: 16rpx;
  color: #07c160;
}

.tip-text {
  font-size: 26rpx;
  flex: 1;
}

/* 结果页面样式 */
.result-page {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 30rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.back-btn, .home-btn {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.back-icon, .home-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.result-content {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.image-preview {
  width: 100%;
  height: 400rpx;
  background: #f8f8f8;
}

.image-preview image {
  width: 100%;
  height: 100%;
}

.result-card {
  padding: 30rpx;
}

/* 加载状态 */
.loading-box {
  text-align: center;
  padding: 40rpx;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  margin: 0 auto 20rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 无结果状态 */
.no-result {
  text-align: center;
  padding: 40rpx;
}

.no-result-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.no-result-tip {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}

/* 识别结果样式 */
.text-result {
  padding: 20rpx;
}

.content-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
  margin-bottom: 20rpx;
  display: block;
}

.copy-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  margin-top: 20rpx;
}
