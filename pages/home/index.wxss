.container {
  min-height: 100vh;
  background: #f6f6f6;
  padding: 0;
  margin: 0;
  display: block;
}

/* 轮播图 */
.banner {
  width: 100%;
  height: 300rpx;
  margin: 0;
  padding: 0;
  margin-bottom: 30rpx;
}

.banner image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 内容区域 */
.content-wrapper {
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.section {
  padding: 30rpx;
  background: #ffffff;
  border-radius: 12rpx;
}

.section:last-child {
  margin-top: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.more {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 24rpx;
}

.arrow {
  margin-left: 4rpx;
}

/* 工具网格 */
.tool-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
  padding: 0;
}
