.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx 0;
  box-sizing: border-box;
}

.search-box {
  margin: 0 24rpx 16rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-box icon {
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  height: 48rpx;
  min-width: 0;
  font-size: 28rpx;
  color: #333333;
}

.search-input::placeholder {
  color: #999999;
}

.tool-list {
  flex: 1;
  overflow: hidden;
}

.empty-state {
  text-align: center;
  color: #999;
  padding: 48rpx 0;
  font-size: 28rpx;
}
